<!-- Remote views can support Frame, Linear, Relative, or Grid Layout
 Remote views can support the following widget classes
 Analog Clock, Button, Chronometer, ImageButton, ImageView,
 ProgressBar, TextView, ViewFlipper, ListView, GridView,
 StackView, and AdapterViewFlipper (and ViewStub) -->

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:rowCount="4"
    android:columnCount="4"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="4"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:text="TextView"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"/>

</GridLayout>