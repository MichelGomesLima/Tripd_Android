<!-- Remote views can support Frame, Linear, Relative, or Grid Layout
 Remote views can support the following widget classes
 Analog Clock, Button, Chronometer, ImageButton, ImageView,
 ProgressBar, TextView, ViewFlipper, ListView, GridView,
 StackView, and AdapterViewFlipper (and ViewStub) -->

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/colorBackground"
    android:padding="@dimen/widget_margin">

    <!-- Trip Title -->
    <TextView
        android:id="@+id/tripTitleID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="trip title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="0"
        android:padding="10dp" />

    <!-- Start City -->
    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start City:"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:layout_column="1"
        android:layout_row="1"
        android:padding="5dp" />

    <TextView
        android:id="@+id/startCityID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startcity name"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_column="2"
        android:layout_row="1"
        android:padding="5dp" />

    <!-- End City -->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="endcity"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:layout_column="1"
        android:layout_row="2"
        android:padding="5dp" />

    <TextView
        android:id="@+id/endCityID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="endcityname"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_column="2"
        android:layout_row="2"
        android:padding="5dp" />

    <!-- Start Date -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="departdate"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:layout_column="1"
        android:layout_row="3"
        android:padding="5dp" />

    <TextView
        android:id="@+id/startDateID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start date time"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_column="2"
        android:layout_row="3"
        android:padding="5dp" />

    <!-- End Date -->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="arrivedate"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:layout_column="1"
        android:layout_row="4"
        android:padding="5dp" />

    <TextView
        android:id="@+id/endDateID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="arrive date time"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_column="2"
        android:layout_row="4"
        android:padding="5dp"/>

</GridLayout>
